{
  "name": "my-electron-react-threejs",
  "version": "0.1.0",
  "description": "1. Put one of the example HTML file into the main directory and change name to \"index.html\". Use \"Live Server\" vscode plugin to check the result.",
  "main": "./public/electron.js",
  "private": true,
  "homepage": "./",
  "scripts": {
    "start": "tsc ./public/electron.ts && concurrently \"npm run react-start\" \"wait-on https://localhost:3000/ && electron .\"",
    "react-start": "webpack serve --config webpack.config.dev.js",
    "react-build": "webpack --config webpack.config.js",
    "electron-start": "tsc ./public/electron.ts ./public/preload.ts && electron .",
    "electron-build": "tsc ./public/electron.ts ./public/preload.ts && npm run react-build && electron-builder build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Kisae Lee",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.8.0",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.0.1",
    "css-loader": "^6.7.3",
    "electron": "^24.0.0",
    "electron-builder": "^24.2.0",
    "file-loader": "^6.2.0",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.2",
    "url-loader": "^4.1.1",
    "wait-on": "^7.0.1",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.13.2"
  },
  "build": {
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "public/**/*",
      "database/**/*",
      "extra/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources":[
      "extra/**"
    ]
  }
}
